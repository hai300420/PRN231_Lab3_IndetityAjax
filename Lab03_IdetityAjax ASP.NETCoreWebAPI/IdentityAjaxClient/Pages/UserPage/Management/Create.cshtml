@page
@model IdentityAjaxClient.Pages.UserPage.Management.CreateModel
@{
    ViewData["Title"] = "Create User";
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4 botanical-breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index" class="text-decoration-none">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="./Index" class="text-decoration-none">User Management</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create User</li>
        </ol>
    </nav>

    <!-- Botanical Header -->
    <div class="botanical-header text-center mb-5 position-relative">
        <div class="leaf-decoration left-leaf animate-float"></div>
        <h1 class="display-5 fw-bold section-title">Create New User</h1>
        <p class="section-subtitle">Add a new user account to your flower shop</p>
        <div class="leaf-decoration right-leaf animate-float"></div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card-botanical shadow-botanical animate-fade-in-up">
                <div class="card-header-botanical">
                    <div class="d-flex align-items-center">
                        <div class="icon-wrapper-botanical me-3" style="width: 40px; height: 40px;">
                            <i class="bi bi-person-plus"></i>
                        </div>
                        <h4 class="mb-0 orchid-title">User Information</h4>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form method="post" class="orchid-form">
                        <div asp-validation-summary="ModelOnly" class="alert-botanical alert-danger-botanical" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Account.AccountName" class="form-label orchid-form-label">Full Name</label>
                            <div class="input-group">
                                <span class="input-group-text botanical-input-icon"><i class="bi bi-person"></i></span>
                                <input asp-for="Account.AccountName" class="form-control form-control-botanical" placeholder="Enter user's full name" required />
                            </div>
                            <span asp-validation-for="Account.AccountName" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Account.Email" class="form-label orchid-form-label">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text botanical-input-icon"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Account.Email" class="form-control form-control-botanical" placeholder="Enter email address" required/>
                            </div>
                            <span asp-validation-for="Account.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Account.Password" class="form-label orchid-form-label">Password</label>
                            <div class="input-group">
                                <span class="input-group-text botanical-input-icon"><i class="bi bi-lock"></i></span>
                                <input asp-for="Account.Password" class="form-control form-control-botanical" placeholder="Enter password" required />
                            </div>
                            <span asp-validation-for="Account.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Account.RoleId" class="form-label orchid-form-label">User Role</label>
                            <div class="input-group">
                                <span class="input-group-text botanical-input-icon"><i class="bi bi-shield"></i></span>
                                <select asp-for="Account.RoleId" class="form-select form-control-botanical" asp-items="Model.RoleList" required>
                                </select>
                            </div>
                            <span asp-validation-for="Account.RoleId" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-3 mt-5">
                            <button type="submit" class="btn-botanical btn-primary-botanical">
                                <i class="bi bi-save me-2"></i> Create User
                            </button>
                            <a asp-page="./Index" class="btn-botanical btn-outline-botanical">
                                <i class="bi bi-arrow-left me-2"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card-botanical shadow-botanical animate-fade-in-up delay-100">
                <div class="card-header-botanical">
                    <div class="d-flex align-items-center">
                        <div class="icon-wrapper-botanical me-3" style="width: 40px; height: 40px;">
                            <i class="bi bi-info-circle"></i>
                        </div>
                        <h4 class="mb-0 orchid-title">User Roles</h4>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <div class="d-flex align-items-center mb-2">
                            <div class="role-icon me-3" style="background-color: var(--primary-color);">
                                <i class="bi bi-shield-fill"></i>
                            </div>
                            <h6 class="mb-0 fw-bold">Admin</h6>
                        </div>
                        <p class="text-muted mb-0">Full access to all system features including user management</p>
                    </div>
                    <div class="mb-4">
                        <div class="d-flex align-items-center mb-2">
                            <div class="role-icon me-3" style="background-color: #3498db;">
                                <i class="bi bi-person-badge"></i>
                            </div>
                            <h6 class="mb-0 fw-bold">Staff</h6>
                        </div>
                        <p class="text-muted mb-0">Access to manage products, categories, and process orders</p>
                    </div>
                    <div>
                        <div class="d-flex align-items-center mb-2">
                            <div class="role-icon me-3" style="background-color: var(--primary-green);">
                                <i class="bi bi-person"></i>
                            </div>
                            <h6 class="mb-0 fw-bold">Customer</h6>
                        </div>
                        <p class="text-muted mb-0">Standard user access for browsing products and placing orders</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <style>
        /* Form styling */
        .form-control-botanical {
            border-radius: 15px;
            border: 2px solid #e9ecef;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }
        
        .form-control-botanical:focus {
            border-color: var(--primary-green);
            box-shadow: 0 0 0 0.25rem rgba(93, 156, 89, 0.25);
        }
        
        .orchid-form-label {
            font-weight: 500;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
        }
        
        /* Input group styling */
        .botanical-input-icon {
            background-color: var(--light-green);
            border: none;
            color: var(--primary-green);
            border-top-left-radius: 15px;
            border-bottom-left-radius: 15px;
        }
        
        .input-group .form-control-botanical {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }
        
        /* Role icon styling */
        .role-icon {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }
        
        /* Alert styling */
        .alert-botanical {
            border: none;
            border-radius: 15px;
            padding: 1rem;
        }
        
        .alert-danger-botanical {
            background-color: rgba(231, 76, 60, 0.1);
            color: var(--primary-color);
        }
        
        /* Floating animations */
        @@keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }
        
        .animate-float {
            animation: float 6s infinite ease-in-out;
        }
        
        /* Fade in animation */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .animate-fade-in-up {
            animation: fadeInUp 0.8s ease-out forwards;
        }
        
        .delay-100 {
            animation-delay: 0.1s;
        }
    </style>
}