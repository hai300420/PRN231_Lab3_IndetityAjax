@page
@model CreateModel
@{
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4 botanical-breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index" class="text-decoration-none">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="./Index" class="text-decoration-none">Categories</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="botanical-header text-center mb-5 position-relative">
                <div class="leaf-decoration left-leaf animate-float"></div>
                <h1 class="display-5 fw-bold section-title">Create New Category</h1>
                <p class="section-subtitle">Add a new category to organize your orchid collection</p>
                <div class="leaf-decoration right-leaf animate-float"></div>
            </div>
            
            <div class="card-botanical shadow-botanical animate-fade-in-up">
                <div class="card-header-botanical">
                    <div class="d-flex align-items-center">
                        <div class="icon-wrapper-botanical me-3" style="width: 40px; height: 40px;">
                            <i class="bi bi-folder-plus"></i>
                        </div>
                        <h4 class="mb-0 orchid-title">Category Details</h4>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form method="post" class="orchid-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Category.CategoryName" class="form-label orchid-form-label">Category Name</label>
                            <input asp-for="Category.CategoryName" class="form-control form-control-botanical" autocomplete="off" placeholder="Enter category name" />
                            <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="./Index" class="btn-botanical btn-outline-botanical">
                                <i class="bi bi-arrow-left me-2"></i> Back to List
                            </a>
                            <button type="submit" class="btn-botanical btn-primary-botanical">
                                <i class="bi bi-plus-circle me-2"></i> Create Category
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <style>
        /* Form styling */
        .form-control-botanical {
            border-radius: 15px;
            border: 2px solid #e9ecef;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }
        
        .form-control-botanical:focus {
            border-color: var(--primary-green);
            box-shadow: 0 0 0 0.25rem rgba(93, 156, 89, 0.25);
        }
        
        .orchid-form-label {
            font-weight: 500;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
        }
        
        /* Floating animation */
        @@keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }
        
        .animate-float {
            animation: float 6s infinite ease-in-out;
        }
        
        /* Fade in animation */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .animate-fade-in-up {
            animation: fadeInUp 0.8s ease-out forwards;
        }
    </style>
}